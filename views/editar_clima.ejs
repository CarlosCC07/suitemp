<!DOCTYPE html>
<html lang="en">

<% include ./include/header %>

<body id="page-top">

  <% include ./include/nav %>

  <div id="wrapper">

    <% include ./include/sidebar %>

    <div id="content-wrapper">

      <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="#">Clima Organizacional</a>
          </li>
          <li class="breadcrumb-item active"><%= crumb %></li>
        </ol>

        <% if (state == 0) { %>

        <div class="row">
          <div class="col-xl-3 col-sm-6 mb-3">
            <form method="get" action="/clima">
              <button type="submit" style="background: none; border: none;"><a style="color: white;" class="btn btn-primary btn-lg">Regresar</a></button>
          </form>
          </div>
          <div class="col-xl-3 col-sm-6 mb-3">
              <form method="post" action="/editar_clima" enctype="multipart/form-data">
                <input type="hidden" name="state" value="1">
                <button type="submit" style="background: none; border: none;"><a style="color: white;" class="btn btn-primary btn-lg"><i class="fas fa-fw fa-plus"></i>&nbsp;Agregar Respuestas</a></button>
              </form>
            </div>
        </div>

          <% } else if (state == 1) { %>
          <div class="row">
            <div class="col-xl-3 col-sm-6 mb-3">
              <form method="get" action="/editar_clima">
                <button type="submit" style="background: none; border: none;"><a style="color: white;" class="btn btn-primary btn-lg">Regresar</a></button>
            </form>
            </div>
          </div>

          <form method="post" action="/editar_clima" enctype="multipart/form-data">
            <div class="form-row">
              <div class="col-xl-6 col-sm-12 mb-6">
                <div class="form-group"><h4>Agregar Generales </h4></div>
                <div class="form-group">
                  <label for="reactivos_file">Archivo CSV Generales</label>
                  <input type="file" class="form-control-file" name="reactivos_file" id="reactivos_file" multiple>
                </div>
              </div>
            </div>
            <br>
            <div class="form-row">
              <div class="col-xl-6 col-sm-12 mb-6">
                <div class="form-group"><h4>Agregar Respuestas </h4></div>
                <div class="form-group">
                  <label for="reactivos_file">Archivo CSV Global</label>
                  <input type="file" class="form-control-file" name="reactivos_file" id="reactivos_file" multiple>
                </div>
              </div>
            </div>
            <input type="hidden" name="state" value="2">
            <button type="submit" class="btn btn-primary btn-lg">Aceptar</button>
          </form>

          <% } else { %>
          <form method="get" action="/clima">
          <div class="form-row">
            <div class="col-xl-6 col-sm-12 mb-6">
              <div class="form-group"><h4>Respuestas agregadas exitosamente!</h4></div>
              <button type="submit" style="background: none; border: none;"><a style="color: white;" class="btn btn-primary btn-lg">Regresar</a></button>
            </div>
          </div>
        </form>
          <% } %>

      </div>

      <% include ./include/sticky %>

    </div>
    <!-- /.content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <% include ./include/footer %>

  <% include ./include/scripts %>

  <script>
    $('#servicios_check').change(function(){
      $("#servicios_input").prop("disabled", !$(this).is(':checked'));
    });

    $('#otras_check').change(function(){
      $("#otras_input").prop("disabled", !$(this).is(':checked'));
    });
  </script>

</body>

</html>
